    </style>

    <style name="Subtitle1.Secondary">
        <item name="android:textColor">@color/commonResourceColorTextSecondary</item>
    </style>

    <style name="Subtitle1.Highlight">
        <item name="android:textColor">@color/commonResourceColorControlActivated</item>
    </style>

    <style name="Subtitle1.Primary.Bold">
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
    </style>

    <style name="Subtitle2">
        <item name="android:fontFamily">@font/iran_yekan_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Subtitle2.Primary">
        <item name="android:textColor">@color/commonResourceColorTextPrimary</item>
    </style>

    <style name="Subtitle2.Secondary">
        <item name="android:textColor">@color/commonResourceColorTextSecondary</item>
    </style>

    <style name="Subtitle2.Primary.Bold">
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
    </style>

    <style name="Subtitle2.Highlight">
        <item name="android:textColor">@color/commonResourceColorControlActivated</item>
    </style>

    <style name="Subtitle2.Highlight.Bold">
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
    </style>

    <style name="Subtitle2.Error">
        <item name="android:textColor">@color/commonResourceColorError</item>
    </style>

    <style name="Caption">
        <item name="android:fontFamily">@font/iran_yekan_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Caption.Primary">
        <item name="android:textColor">@color/commonResourceColorTextPrimary</item>
    </style>

    <style name="Caption.Primary.Bold">
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
    </style>

    <style name="Caption.Secondary">
        <item name="android:textColor">@color/commonResourceColorTextSecondary</item>
    </style>

    <style name="Body1">
        <item name="android:fontFamily">@font/iran_yekan_regular</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Body1.Primary">
        <item name="android:textColor">@color/commonResourceColorTextPrimary</item>
    </style>

    <style name="Body2">
        <item name="android:fontFamily">@font/iran_yekan_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body2.Primary">
        <item name="android:textColor">@color/commonResourceColorTextPrimary</item>
